#; standard, sets root dir
root = true

# everything is currently commented 'cause i'm working on this in my monorepo

; settings for all files and filetypes
[*]
end_of_line = crlf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true


; typescript, javascript, react, and json settings
[*.{ts,js,mjs,cjs,tsx,jsx}]
indent_size = 2
tab_width = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true


[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2
tab_width = 2
indent_style = tab


; .*rc files
[*.*rc]
indent_style = tab
indent_size = 2
tab_width = 2



; yml - note this one **needs** to be 2 spaces indent
[*.{yml,yaml}]
indent_style = space
indent_size = 2


; markdown
[*.md]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
