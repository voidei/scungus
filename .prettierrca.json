{
  "bracketSpacing": true,
  "editorconfig": true,
  "endOfLine": "crlf",
  "jsxSingleQuote": true,
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": [
        "*.js",
        "*.jsx",
        "*.cjs",
        "*.mjs"
      ],
      "options": {
        "parser": "babel"
      }
    }
  ],
  "quoteProps": "consistent",
  "requirePragma": false,
  "singleQuote": true,
  "useTabs": true
}
